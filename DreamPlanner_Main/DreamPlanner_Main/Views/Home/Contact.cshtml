@model DreamPlanner_Main.Models.UserDefinedModels.Contact

<style type="text/css">
    .formFont {
        font-family: "palatino linotype", palatino, serif;
        font-size: 12px;
        letter-spacing: 0.6pt;
        word-spacing: -1.2pt;
    }

    .formButton {
