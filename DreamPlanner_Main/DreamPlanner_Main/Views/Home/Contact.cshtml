        background-color: #ededed;
        font-size: 14px;
        font-weight: normal;
        font-family: Caslon;
        background: -webkit-gradient(linear, left top, left bottom, color-start(0.05, #b5afaf), color-stop(1, #fafafa));
        background: -moz-linear-gradient(top, #b5afaf 5%, #fafafa 100%);
        background: -o-linear-gradient(top, #b5afaf 5%, #fafafa 100%);
        background: -ms-linear-gradient(top, #b5afaf 5%, #fafafa 100%);
        background: linear-gradient(to bottom, #b5afaf 5%, #fafafa 100%);
        background: -webkit-linear-gradient(top, #b5afaf 5%, #fafafa 100%);
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#b5afaf', endColorstr='#fafafa',GradientType=0);
        border: 0px solid #dcdcdc;
        -webkit-border-top-left-radius: 19px;
        -moz-border-radius-topleft: 19px;
        border-top-left-radius: 19px;
        -webkit-border-top-right-radius: 19px;
        -moz-border-radius-topright: 19px;
        border-top-right-radius: 19px;
        -webkit-border-bottom-left-radius: 19px;
        -moz-border-radius-bottomleft: 19px;
        border-bottom-left-radius: 19px;
        -webkit-border-bottom-right-radius: 19px;
        -moz-border-radius-bottomright: 19px;
        border-bottom-right-radius: 19px;
        -moz-box-shadow: inset 0px 0px 0px 0px #ffffff;
        -webkit-box-shadow: inset 0px 0px 0px 0px #ffffff;
        box-shadow: inset 0px 0px 0px 0px #ffffff;
        text-align: center;
        display: inline-block;
        text-decoration: none;
    }

        .formButton:hover {
            background-color: #f5f5f5;
            background: -webkit-gradient(linear, left top, left bottom, color-start(0.05, #fafafa), color-stop(1, #b5afaf));
            background: -moz-linear-gradient(top, #fafafa 5%, #b5afaf 100%);
            background: -o-linear-gradient(top, #fafafa 5%, #b5afaf 100%);
            background: -ms-linear-gradient(top, #fafafa 5%, #b5afaf 100%);
            background: linear-gradient(to bottom, #fafafa 5%, #b5afaf 100%);
            background: -webkit-linear-gradient(top, #fafafa 5%, #b5afaf 100%);
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#fafafa', endColorstr='#b5afaf',GradientType=0);
        }
</style>


<!-- Contact form-->
<div style="width:100%;">
    <div style="float:left;display:inline; width:55%;margin-left:1.5%;">

        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3>Contact Us</h3>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" });
            <div class="form-group">
                @Html.LabelFor(c => c.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(c => c.UserName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Message, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(c => c.Message, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Submit" />
                </div>
            </div>
            <div class="form-group">
                    <h4>@ViewBag.ContactResult</h4>
            </div>
        }

