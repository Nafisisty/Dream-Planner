@using DreamPlanner_Main.Models.UserDefinedModels
<!-- === BEGIN HEADER === -->
<!DOCTYPE html>
<html lang="en">
<!--<![endif]-->
<head> 
    <title>Dream Planner</title>
    <!-- Meta -->
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />
    <!-- Favicon -->
    <link href="favicon.ico" rel="shortcut icon">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div id="body_bg">
        <div id="container_header" class="container">
            <div id="header" class="row">
                <div class="col-md-12 margin-top-15">
                    <!-- Header Social Icons -->
                    <ul class="social-icons circle pull-right">
                        <li class="social-twitter">
                            <a href="https://twitter.com/" target="_blank" title="Twitter"></a>
                        </li>
                        <li class="social-facebook">
                            <a href="https://www.facebook.com" target="_blank" title="Facebook"></a>
                        </li>
                        <li class="social-youtube">
                            <a href="https://www.youtube.com/" target="_blank" title="Youtube"></a>
                        </li>
                    </ul>
                    <!-- End Header Social Icons -->
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="primary-container-group">
            <!-- Background -->
            <div class="primary-container-background">
                <div class="primary-container"></div>
                <div class="clearfix"></div>
            </div>
            <!--End Background -->
            <div class="primary-container">
                <div id="container_hornav" class="container no-padding">
                    <!-- Logo -->
                    <div class="logo">
                        <a href="#">
                            <img src="~/assets/img/DreamPlannerLogo.png" alt="Logo" style="margin-top: -15px" />
                        </a>
                    </div>
                    <!-- End Logo -->
                    <!-- Slogan -->
                    <p class="site-slogan">YOU DREAM, WE PLAN</p>
                    <!-- End Slogan -->
                    <!-- Top Menu -->
                    <div class="row">
                        <div class="hornav-block">
                            <div id="hornav" class="pull-right">
                                <ul id="hornavmenu" class="nav navbar-nav">
                                    <li>
                                        @Html.ActionLink("Home", "Index", "Home")
                                    </li>

                                    <li>
                                        <span>Services</span>
                                        <ul>
                                            <li>
                                                @Html.ActionLink("Our Services", "Service", "Home")
                                            </li>
                                            <li>
                                                @Html.ActionLink("Wedding", "Wedding", "Home")
                                            </li>
                                            <li>
                                                @Html.ActionLink("Birthday", "Birthday", "Home")
                                            </li>
                                            <li class="parent">
                                                <span>Community</span>
                                                <ul>
                                                    <li>
                                                        @Html.ActionLink("Muslim", "Muslim", "Home")
                                                    </li>
                                                    <li>
                                                        @Html.ActionLink("Buddist", "Buddist", "Home")
                                                    </li>
                                                    <li>
                                                        @Html.ActionLink("Hindu", "Hindu", "Home")
                                                    </li>
                                                    <li>
                                                        @Html.ActionLink("Christian", "Christian", "Home")
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </li>

                                    <li>
                                        @Html.ActionLink("Gallery", "Gallery", "Home")
                                    </li>

                                    <li>
                                        @Html.ActionLink("About Us", "About", "Home")
                                    </li>

                                    <li>
                                        @Html.ActionLink("Contact", "Contact", "Home")
                                    </li>

                                    <li>
                                        @if (Authentication.UserStatus)
                                        {
                                            @Html.ActionLink("Log out", "LogOff", "Authentication")

                                        }
                                        else
                                        {
                                        @Html.ActionLink("Log in", "LogIn", "Authentication")
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!-- End Top Menu -->
                </div>
                <div class="container body-content">
                    @RenderBody()
                </div>
                <div id="base" class="container padding-vert-30">
                    <div class="row">
                        <!-- Disclaimer -->
                        <div class="col-md-8">
                            <h3 class="margin-bottom-10">Disclaimer</h3>
                            <p>All stock images on this demo website are for presentation purposes only, intended to represent a live site and are not included with this website.</p>
                            <p>
                                Most of the images used here are for only to present our demo project so that it looks more realistic and better. We dont have any copyright of these pictures. We are not going to upload these pictures on any server.
                            </p>
                            <div class="clearfix"></div>
                        </div>
                        <!-- End Disclaimer -->
                        <!-- Contact Details -->
                        <div class="col-md-4">
                            <h3 class="margin-bottom-10">Contact Details</h3>
                            <p>
                                Vita Briggen,
                                <br />Norra Smedjegatan 59 (ingång från gården),
                                <br />37133 Karlskrona,
                                <br />Sweden
                            </p>
                            <p>
                                Email:
                                <a href="mailto:nafisisty@gmail.com">nafisisty@gmail.com</a>
                                <br />Website:
                                <a href="http://www.google.com">www.google.com</a>
                            </p>
                        </div>
                        <!-- End Contact Details -->
                        <div class="clearfix"></div>
                    </div>
                </div>
                <!-- Footer Menu -->
                <div id="footermenu" class="container">
                    <div class="row">
                        <ul class="list-unstyled list-inline">
                            <li>
                                @Html.ActionLink("Services", "Service", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Gallery", "Gallery", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("About Us", "About", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Contact", "Contact", "Home")
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <!-- End Footer Menu -->
            </div>
        </div>
        <div class="container padding-vert-30">
            <div class="row">
                <div id="copyright">
                    <p>(c) 2017 Copyright by Dream Planner Co.</p>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
<!-- === END FOOTER === -->
