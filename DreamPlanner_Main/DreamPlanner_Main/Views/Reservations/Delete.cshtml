@model DreamPlanner_Main.Models.UserDefinedModels.Reservation

<h2>Cancel Reservation</h2>

<h3>Are you sure you want to cancel this?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Hall
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hall.HallName)
        </dd>

        <dt>
            Theme
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Theme.ThemeName)
        </dd>

        <dt>
            Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReservationDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancel" class="btn btn-default" />
        </div>
        <br />
    }
</div>
